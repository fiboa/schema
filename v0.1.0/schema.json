{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://fiboa.github.io/schema/v0.1.0/schema.json",
  "type": "object",
  "required": ["$schema", "properties"],
  "properties": {
    "schema": {
      "type": "string",
      "const": "https://fiboa.github.io/schema/v0.1.0/schema.json"
    },
    "required": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "properties": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "$ref": "#/definitions/schema"
      }
    }
  },
  "$definitions": {
    "schema": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "boolean",
            "int8",
            "uint8",
            "int16",
            "uint16",
            "int32",
            "uint32",
            "int64",
            "uint64",
            "float",
            "double",
            "binary",
            "string",
            "array",
            "object",
            "date",
            "date-time",
            "geometry",
            "bounding-box"
          ]
        }
      },
      "oneOf": [
        {
          "$ref": "#/definitions/string"
        },
        {
          "$ref": "#/definitions/integer"
        },
        {
          "$ref": "#/definitions/floatingpoint"
        },
        {
          "$ref": "#/definitions/array"
        },
        {
          "$ref": "#/definitions/object"
        },
        {
          "$ref": "#/definitions/other"
        }
      ]
    },
    "object": {
      "type": "object",
      "required": ["type", "properties"],
      "properties": {
        "type": {
          "type": "string",
          "const": "object"
        },
        "required": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "properties": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/schema"
          }
        },
        "additionalProperties": {
          "oneOf": [
            {
              "type": "boolean"
            },
            {
              "$ref": "#/definitions/schema"
            }
          ],
          "default": false
        }
      }
    },
    "string": {
      "type": "object",
      "required": ["type", "items"],
      "properties": {
        "type": {
          "type": "string",
          "const": "string"
        },
        "format": {
          "type": "string",
          "enum": ["email", "idn-email", "iri", "uri", "uuid"]
        },
        "maxLength": {
          "type": "integer",
          "minimum": 0
        },
        "minLength": {
          "type": "integer",
          "minimum": 0,
          "default": 0
        },
        "pattern": {
          "type": "string",
          "format": "regex"
        },
        "enum": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "floatingpoint": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["float", "double"]
        }
      },
      "allOf": [
        {
          "$ref": "#/definitions/_numerical"
        }
      ]
    },
    "integer": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "int8",
            "uint8",
            "int16",
            "uint16",
            "int32",
            "uint32",
            "int64",
            "uint64"
          ]
        },
        "enum": {
          "type": "array",
          "items": {
            "type": "integer"
          }
        }
      },
      "allOf": [
        {
          "$ref": "#/definitions/_numerical"
        }
      ]
    },
    "_numerical": {
      "type": "object",
      "properties": {
        "maximum": {
          "type": "number"
        },
        "exclusiveMaximum": {
          "type": "number"
        },
        "minimum": {
          "type": "number"
        },
        "exclusiveMinimum": {
          "type": "number"
        }
      }
    },
    "array": {
      "type": "object",
      "required": ["items"],
      "properties": {
        "type": {
          "type": "string",
          "const": "array"
        },
        "items": {
          "type": "object",
          "items": {
            "$ref": "#/definitions/schema"
          }
        },
        "maxItems": {
          "type": "integer",
          "minimum": 0
        },
        "minItems": {
          "type": "integer",
          "minimum": 0,
          "default": 0
        },
        "uniqueItems": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "other": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "boolean",
            "binary",
            "enum",
            "date",
            "date-time",
            "geometry",
            "bounding-box"
          ]
        }
      }
    }
  }
}
